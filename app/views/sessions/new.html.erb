<div class="container">

<%= form_tag(login_path, method: 'post', :class => "form-signin") do %>
<%= label_tag :email %>
<%= email_field_tag :email, nil, class: "form-control" %>
<%= label_tag :password %>
<%= password_field_tag :password, nil, class: "form-control" %>
<%= submit_tag "Log in", class: "btn btn-lg btn-primary btn-block" %><br>
<%= link_to "Sign up", signup_path, class: "btn  btn-block" %>
<% end %>

</div>
